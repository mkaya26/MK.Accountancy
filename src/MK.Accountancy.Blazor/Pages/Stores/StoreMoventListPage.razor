@inherits BaseListPage<SelectInvoiceDetailDto,ListStockMoventDto,StoreMoventListParameterDto,
                       InvoiceDetailDto,InvoiceDetailDto,InvoiceNumberParameterDto>

@inject StoreMoventAppService CrudService
@inject StoreMoventService Service

<DevListPageLayout DataGridService="Service"
                   ListPageService="Service"
                   Caption="@L["StoreTransactions"]"
                   RowHeights="@RowHeights("*")">

    <ListPageContext>
        <DevDataGrid DataGridService="Service"
                     HorizontalScrollBarMode="ScrollBarMode.Auto">
            <HeaderTemplate>
                <DevListPageToolBar CommonService="Service"
                                    DataGridService="Service"
                                    ListPageService="Service"
                                    DeleteButtonVisible="false"
                                    FilterButtonVisible="true"
                                    GroupButtonVisible="true"
                                    L="L"
                                    NewButtonVisible="false"
                                    UpdateButtonVisible="false">
                </DevListPageToolBar>
            </HeaderTemplate>
            <Columns>
                <DxDataGridDateEditColumn Caption="@L["Date"]"
                                          DisplayFormat="@L["DateFormat"]"
                                          Field="@nameof(ListStockMoventDto.MoventDate)"
                                          TextAlignment="DataGridTextAlign.Center"
                                          Width="80px" />
                <DxDataGridColumn Caption="@L["DocumentNo"]"
                                  Field="@nameof(ListStockMoventDto.DocumentNo)"
                                  Width="160px" />
                <DxDataGridColumn Caption="@L["DocumentType"]"
                                  Field="@nameof(ListStockMoventDto.DocumentType)"
                                  Width="100px" />
                <DxDataGridColumn Caption="@L["MoventType"]"
                                  Field="@nameof(ListStockMoventDto.InvoiceDetailTypeName)"
                                  Width="100px" />
                <DxDataGridSpinEditColumn Caption="@L["Quantity"]"
                                          DisplayFormat="n2"
                                          Field="@nameof(ListStockMoventDto.Quantity)"
                                          Width="110px" />
                <DxDataGridColumn Caption="@L["Unit"]"
                                  Field="@nameof(ListStockMoventDto.UnitName)"
                                  Width="110px" />
                <DxDataGridSpinEditColumn Caption="@L["UnitPrice"]"
                                          DisplayFormat="n2"
                                          Field="@nameof(ListStockMoventDto.UnitPrice)"
                                          Width="110px" />
                <DxDataGridSpinEditColumn Caption="@L["Amount"]"
                                          DisplayFormat="n2"
                                          Field="@nameof(ListStockMoventDto.TotalPrice)"
                                          Width="110px" />
                <DxDataGridColumn Caption="@L["Description"]"
                                  Field="@nameof(ListStockMoventDto.Description)"
                                  Width="300px" />
            </Columns>
        </DevDataGrid>
    </ListPageContext>
</DevListPageLayout>

@code {
    protected override void OnInitialized()
    {
        Service.ToolbarCheckBoxVisible = false;
        BaseCrudAppService = CrudService;
        BaseService = Service;
    }
}